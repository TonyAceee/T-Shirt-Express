<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CopyWebsite</title>
    <link rel="stylesheet" href="/css/clothes.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
</head> 

<body>
<%- include('partials/header'); %>

<%- include('partials/nav'); %>
<main>
<%- include('partials/sidebar'); %>
<div class="content">
    <h2>Fashionable Clothing Online</h2>
    <div class="filters">
        <label for="size">Size</label>
        <select id="size">
            <option value="all">All</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
        </select>
        <label for="color">Color</label>
        <select id="color">
            <option value="all">All</option>
            <option value="White">White</option>
            <option value="Black">Black</option>
            <option value="Red">Red</option>
        </select>
        <label for="price">Price</label>
        <select id="price">
            <option value="all">All</option>
            <option value="0-50">0 - 50 zl</option>
            <option value="51-100">51 - 100 zl</option>
            <option value="101-150">101 - 150 zl</option>
        </select>
        <label for="sort">Sort</label>
        <select id="sort">
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
        </select>
    </div>
    <div class="container" id="products-container">
        <div class="products">
            <% products.forEach(product => { %>
                <div class="product">
                    <img src="<%= product.image_url %>" alt="<%= product.name %>">
                    <h2><%= product.name %></h2>
                    <p><%= product.description %></p>
                    <p class="price"><%= product.price %> zl</p>
                    <form class="add-to-cart-form" method="POST" action="/cart/add">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <label for="size">Size:</label>
                        <select name="size" id="size">
                            <% product.sizes.forEach(size => { %>
                                <option value="<%= size %>"><%= size %></option>
                            <% }) %>
                        </select>
                        <button type="submit">Add to Cart</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
</div>
</main>
    <%- include('partials/footer'); %>

    <script src="/js/script.js"></script>
    <script src="/js/clothes.js"></script>
</body>

</html> 